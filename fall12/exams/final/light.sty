\newcommand{\generic}[2]{
  \noindent \coursename \hfill #2 \newline
  \coursestaff \vspace{-1.5ex} \newline
  \mbox{} \hrulefill \mbox{}
  \vspace{0.25in}
  \begin{center}
    {\Large \textbf{#1}}
  \end{center}
  \thispagestyle{plain}
  \pagestyle{myheadings}
  \thispagestyle{empty}
  \markboth{#1}{#1}
